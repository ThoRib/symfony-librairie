{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <h1>Carousel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if carousel.imageName is defined and carousel.imageName is not null %}
                    <img src="{{ asset('images/carousels/' ~ carousel.imageName )}}" alt="" class="img-fluid">
                    {% else %}
                    N/A
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark">retour Ã  la liste</a>

    <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="pen-tool"></i></a>

    {{ include('admin_carousel/_delete_form.html.twig') }}
{% endblock %}
