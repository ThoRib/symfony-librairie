{% extends 'base-backend.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_auteur_index') }}" class="btn btn-dark">Retour à la liste</a>
    <h1>Auteur</h1>
    <div class="d-flex justify-content-end align-items-end">
    {{ include('admin_auteur/_delete_form.html.twig') }}
    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="pen-tool"></i></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ auteur.pseudo }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if auteur.imageName is defined and auteur.imageName is not null  %}
                <img src="{{ asset('images/auteurs/' ~ auteur.imageName) }}" alt="Portrait de l'auteur" class="portrait ">
                {% else %}
                    N∕A
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ auteur.updatedAt ? auteur.updatedAt|date('d-m-Y H:i:s') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
