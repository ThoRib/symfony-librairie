{% extends 'base-backend.html.twig' %}

{% block title %}Les Auteurs{% endblock %}

{% block body %}
    <h1>Les Auteurs</h1>
    <a href="{{ path('app_admin_auteur_new') }}" class="btn btn-dark">Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Pseudo</th>
                <th>Mise à jour</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>
                {% if auteur.imageName is defined and auteur.imageName is not null %}
                <img src="{{ asset('images/auteurs/' ~ auteur.imageName) }}" alt="photo de l'auteur" class="img-list">
                {% else %}
                    N∕A 
                {% endif %}
                </td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.pseudo }}</td>
                <td>{{ auteur.updatedAt ? auteur.updatedAt|date('d-m-Y H:i:s') : 'N∕A' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_auteur_show', {'id': auteur.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="pen-tool"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
