{% extends 'base-backend.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_editeur_index') }}" class="btn btn-dark">back to list</a>
    <h1>Editeur</h1>
    <div class="d-flex justify-content-end align-items-end">
    {{ include('admin_editeur/_delete_form.html.twig') }}
    <a href="{{ path('app_admin_editeur_edit', {'id': editeur.id}) }}" class="btn btn-success ms-2"><i class="align-middle" data-feather="pen-tool"></i></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ editeur.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ editeur.description ? editeur.description : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>
                {% if editeur.logoName is defined and editeur.logoName is not null %}
                <img src="{{ asset('images/editeurs/' ~ editeur.logoName) }}" alt="logo de l'éditeur" class="img-list" >
                {% else %}
                    N/A
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if editeur.imageName is defined and editeur.imageName is not null %}
                <img src="{{ asset('images/editeurs/editeur.imageName') }}" alt="image de l'éditeur" class="img-list" >
                {% else %}
                    N/A
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ editeur.updatedAt ? editeur.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
