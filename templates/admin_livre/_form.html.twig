{{ form_start(form) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.description) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.auteurs) }}
    {{ form_row(form.categorie) }}
    {{ form_row(form.editeur) }}
    {{ form_row(form.imageFile) }}
    <button type="button" class="add_item_link btn btn-primary" data-collection-holder-class="livre-image">Ajouter une image</button>
    <ul class="livre-image"
    data-index="{{ form.livreImages|length > 0 ? form.livreImages|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_widget(form.livreImages.vars.prototype)|e('html_attr') }}"
    ></ul>
    <button class="btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
